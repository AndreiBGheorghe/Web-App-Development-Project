@model List<Alerta>

<h2>Alertele tale</h2>

@if (Model.Count == 0)
{
    <p>Nu ai alerte.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Alerta</th>
                <th>Citita</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var alerta in Model)
            {
                <tr>
                    <td>@alerta.Continut</td>
                    <td>@(alerta.Citita ? "Da" : "Nu")</td>
                </tr>
            }
        </tbody>
    </table>
}